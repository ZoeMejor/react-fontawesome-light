{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "tsup.config.ts", "jest.config.ts", "test-setup"],
  "exclude": ["node_modules", "dist", "coverage"]
}
